<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shared_preferences.DataLocalActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName1"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shapreferences"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtName1"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tvName1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtName2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName2"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data store"
        android:layout_below="@id/btn1"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtName2"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tvName2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtName2"/>



</LinearLayout>